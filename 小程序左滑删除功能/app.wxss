/**app.wxss**/
.container {
  height: 100%;
  background-color: #FAFAFA;
  font-size:30rpx
}
.mt5{margin-top:5rpx} 
.mt10{margin-top:10rpx} 
.mt20{margin-top:20rpx} 
.mt30{margin-top:30rpx} 
.mt40{margin-top:40rpx} 
.mt50{margin-top:50rpx} 
.mt100{margin-top:100rpx}
.margin20{margin:20rpx}
.margin30{margin:30rpx}
.textCenter{text-align: center}
.space{height:20rpx;background:#FAFAFA}
.red{color: red}
.item{border-bottom:20rpx solid #FAFAFA;padding:30rpx;position: relative}
.item .itemTitle{font-size:32rpx;margin-bottom: 20rpx}
.item .itemLabel{position:relative;padding:8rpx 0 8rpx 130rpx;font-size:28rpx}
.item .itemLabel text{color:#9498A1;width:170rpx;position: absolute;left:0;top:8rpx}
.item .itemLabel.long{padding-left:170rpx}
.flexBox{display: flex}
.flex{flex:1}
/**文本域样式**/
.textareaStyle{background:#FBFBFB;border:1rpx solid #eee;width:100%;padding:15rpx;box-sizing: border-box} 
/**下拉框行**/
.selectBoxOut{padding:20rpx 30rpx;background:#FAFAFA} 
.selectBoxOut .label{padding-top:2px}
.selectBox{position: relative;background: #fff;padding:3px 5px;border:1px solid #aaa}
.selectBox .arrow-down{position: absolute;right: 10rpx;top:8rpx}
.selectBox.noBorder{padding:3px 0;border:none}
.no-more-data{
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  line-height: 80rpx;
}
.noData{text-align:center;padding:50px 0;}
.noData view{color:#666}
.txtR{
  text-align: right;
}
.txtL{
  text-align: left;
}
.txtC{
  text-align: center
}